#! /usr/bin/env bash

timestyle_long_iso () {
    TIME_STYLE='long-iso'
}

alias preferred_time=timestyle_long_iso

lang_c_utf8 () {
    # Use the C lang utf 8 locale before calling the passed function
    LANG=C.UTF-8 $1
}

alias preferred_locale=lang_c_utf8

_lhal () {
    ls -hal
}

lhal () {
    # List files with human readable sizes, even the hidden ones, the long way.
    preferred_time preferred_locale _lhal
}

_lha1 () {
    ls -ha1
}

lha1 () {
    # List files with human readable sizes, even the hidden ones,
    # the short way.
    preferred_time preferred_locale _lha1
}
